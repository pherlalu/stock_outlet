<!-- app/views/search/index.html.erb -->
<div class="bg-white">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="py-16 sm:py-24 lg:py-32">
      <h2 class="text-2xl font-bold text-gray-900">Search Products</h2>
      <form action="<%= search_results_path %>" method="get">
        <div class="relative w-2/4 flex">
          <div class="relative flex-1">
            <label for="search" class="sr-only">Search</label>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true" class="h-5 w-5 text-gray-400">
                  <path fill-rule="evenodd" d="M9 3.5a5.5 5.5 0 100 11 5.5 5.5 0 000-11zM2 9a7 7 0 1112.452 4.391l3.328 3.329a.75.75 0 11-1.06 1.06l-3.329-3.328A7 7 0 012 9z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <input id="search" name="search" type="search" placeholder="Search" class="block w-full pl-10 pr-3 py-2 border border-gray-300 bg-gray-800 text-gray-300 placeholder-gray-400 focus:outline-none focus:bg-white focus:text-gray-900 sm:text-sm">
            </div>
          </div>
          <div class="relative inline-block text-left">
            <select name="category" id="category" class="inline-flex justify-center w-full rounded-l-md border border-gray-300 bg-gray-800 py-2 px-4 text-sm font-medium text-gray-300 hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 focus:ring-offset-gray-900">
              <option value="">All Categories</option>
              <% Category.where(sub_category_id: nil).each do |category| %>
                <option value="<%= category.id %>"><%= category.name %></option>
              <% end %>
            </select>
          </div>
          <button type="submit" class="ml-2 inline-flex justify-center w-full rounded-md border border-gray-300 bg-blue-500 py-2 px-4 text-sm font-medium text-white hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 focus:ring-offset-blue-900">
            Search
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
